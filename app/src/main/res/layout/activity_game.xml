<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#e96871"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      tools:context="architgarg.in.tictactoe.GameActivity"
      >

      <TextView
            android:id="@+id/result_text_view"
            android:layout_marginTop="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:shadowColor="#633232"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:layout_centerHorizontal="true"
            />

      <ImageView
            android:id="@+id/mesh_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/mesh"
            android:padding="30dp"
            android:src="@drawable/mesh"
            />

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                  android:id="@+id/text1_id"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="#ffffff"
                  android:textSize="25sp"
                  android:textStyle="bold"
                  android:shadowColor="#633232"
                  android:shadowDx="2"
                  android:shadowDy="2"
                  android:shadowRadius="2"
                  />

            <TextView
                  android:id="@+id/text2_id"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="#ffffff"
                  android:textSize="25sp"
                  android:textStyle="bold"
                  android:shadowColor="#633232"
                  android:shadowDx="2"
                  android:shadowDy="2"
                  android:shadowRadius="2"
                  />

      </LinearLayout>

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            >
<LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginBottom="20dp"
      >
            <!--<TextView-->
                  <!--android:text="X"-->
                  <!--android:textStyle="bold"-->
                  <!--android:textSize="60sp"-->
                  <!--android:textColor="#ffffff"-->
                  <!--android:fontFamily="cursive"-->
                  <!--android:layout_width="0dp"-->
                  <!--android:layout_height="match_parent"-->
                  <!--android:layout_weight="1"-->
                  <!--android:textAlignment="center"-->
                  <!--/>-->

      <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/img1"
            android:onClick="crossClicked"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_gravity="bottom"
            />

            <ImageView
                  android:contentDescription="@string/app_name"
                  android:id="@+id/img2"
                  android:onClick="crossClicked"
                  android:padding="15dp"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  />

            <ImageView
                  android:contentDescription="@string/app_name"
                  android:id="@+id/img3"
                  android:onClick="crossClicked"
                  android:padding="15dp"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  />
</LinearLayout>

            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_marginTop="-20dp"
                  >
                  <ImageView
                        android:contentDescription="@string/app_name"
                        android:id="@+id/img4"
                        android:onClick="crossClicked"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                  <ImageView
                        android:contentDescription="@string/app_name"
                        android:id="@+id/img5"
                        android:onClick="crossClicked"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        />

                  <ImageView
                        android:contentDescription="@string/app_name"
                        android:id="@+id/img6"
                        android:onClick="crossClicked"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        />
            </LinearLayout>

            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_marginTop="25dp"
                  >
                  <ImageView
                        android:contentDescription="@string/app_name"
                        android:id="@+id/img7"
                        android:onClick="crossClicked"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        />

                  <ImageView
                        android:contentDescription="@string/app_name"
                        android:id="@+id/img8"
                        android:onClick="crossClicked"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        />

                  <ImageView
                        android:contentDescription="@string/app_name"
                        android:id="@+id/img9"
                        android:onClick="crossClicked"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        />
            </LinearLayout>

      </LinearLayout>
      <Button
            android:onClick="resetClicked"
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:text="Play Again !!"
            android:textColor="#e96871"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/mesh_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            />

</RelativeLayout>
